<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true"/>

        <instanceof id="Knp\JsonSchema\JsonSchemaInterface">
          <tag name="knp.json_schema" />
        </instanceof>

        <service id="Knp\JsonSchema\Collection">
          <argument type="tagged_iterator" tag="knp.json_schema" />
        </service>

        <service id="Knp\JsonSchema\Validator" />
        <service id="Knp\JsonSchemaBundle\RequestHandler" />
    </services>
</container>